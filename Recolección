 Función del script:Recolector de semillas y ingredientes 1x1(izq)(drch)

#ce ---------------------------------------------------------------------------------------------------------------------------------------

;-----------------------------------------------------------Variables----------------------------------------------------------------------
#include <MsgBoxConstants.au3>
$bResolucion1920=False;cambia la resolución de 1920 a 1336
$idelayRecoleccion = 1950;Delay de la recolección de cultivos.
$scnResolucion = MsgBox(1,"Resolución","Si estas utilizando una resolución de 1920x1080, pulsa aceptar de lo contrario pulsa cancelar.")

;-----------------------------------------------------------LLamadas------------------------------------------------------------------------
HotKeySet("{1}","fncEmpezarScriptIzq");Empezar a la izquierda
HotKeySet("{2}","fncPararScript");Pausar o reanudar programa
HotKeySet("{3}","fncEmpezarScriptDrc");Empezar a la derecha
HotKeySet("{4}","fncEndProg");Finalizar el programa

WinActivate("Wakfu")
ToolTip("Presiona 1 para iniciar la izquierda. Presiona 2 para pausar el programa. Presiona 3 para inicar a la derecha. Presiona4 para cerrar el programa.",300,0,"Acciones",1,0)

While 1
	Sleep(100)
WEnd

;-----------------------------------------------------------Funciones-----------------------------------------------------------------------
Func fncEmpezarScriptDrc() ;Función de ir hacia la Derecha
	While 1
		If $scnResolucion = 1 Then ;Resolución 1920
			MouseClick("right",1021,515,1,3000)
			sleep(700)
			MouseClick("left",935,427,1,1000)
			Sleep($idelayRecoleccion)

			MouseClick("right",1021,515,1,3000)
			sleep(700)
			MouseClick("left",977,465,1,1000)

			Sleep($idelayRecoleccion)
			MouseClick("left",1022,573,1,1000)
			sleep(1000)

		ElseIf $scnResolucion = 2 Then ;Resolución 1333
			MouseClick("right",727,369,1,4000)
			sleep(1000)
			MouseClick("left",644,283,1,2000)
			Sleep($idelayRecoleccion)

			MouseClick("right",727,369,1,4000)
			sleep(700)
			MouseClick("left",686,313,1,2000)
			Sleep($idelayRecoleccion)

			MouseClick("left",729,410,1,1000)
			sleep(1000)
		EndIf
	WEnd
EndFunc

Func fncPararScript() ;Función de pausa y comenzar
	ToolTip("Pausado|Presiona 1 o 2 para reanudar el script",753,178,"Pausado",1,1)
	Sleep(3000)
	ToolTip("")
	While 1
		Sleep(100)
	WEnd
EndFunc ;EmpezarScript

Func fncEmpezarScriptIzq() ;Función de ir hacia la Izquierda
	While 1
		If $scnResolucion = 1 Then ; Resolución 1920
			MouseClick("right",1021,515,1,3000)
			sleep(700)
			MouseClick("left",935,427,1,1000)
			Sleep($idelayRecoleccion)

			MouseClick("right",1021,515,1,3000)
			sleep(700)
			MouseClick("left",977,465,1,1000)
			Sleep($idelayRecoleccion)

			MouseClick("left",906,515,1,1000)
			sleep(1000)
		ElseIf $scnResolucion = 2 Then ;Resolución 1333
			MouseClick("right",727,369,1,4000)
			sleep(1000)
			MouseClick("left",644,283,1,2000)
			Sleep($idelayRecoleccion)

			MouseClick("right",727,369,1,4000)
			sleep(700)
			MouseClick("left",686,313,1,2000)
			Sleep($idelayRecoleccion)

			MouseClick("left",641,370,1,1000)
			sleep(1000)
		EndIf
	WEnd
EndFunc

Func fncEndProg() ;Función de Parar
$bSalir = MsgBox(1,"Salir","¿Quieres realmente salir del programa?.")
		If $bSalir = 2 Then
			While 1
				Sleep(100)
			WEnd
		ElseIf $bSalir = 1 Then
			Exit
		EndIf
EndFunc
